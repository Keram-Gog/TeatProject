@model WebApplication3.Models.Order

<h2 class="mb-4">Создать новый заказ</h2>

<div class="card shadow-sm border-secondary">
    <div class="card-header bg-secondary text-white">
        <h4 class="mb-0">Информация о заказе</h4>
    </div>
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div class="form-group mb-3">
                <label asp-for="SenderCity" class="form-label fw-bold">Город отправителя</label>
                <input asp-for="SenderCity" class="form-control" placeholder="Введите город отправителя" />
                <span asp-validation-for="SenderCity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="SenderAddress" class="form-label fw-bold">Адрес отправителя</label>
                <input asp-for="SenderAddress" class="form-control" placeholder="Введите адрес отправителя" />
                <span asp-validation-for="SenderAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RecipientCity" class="form-label fw-bold">Город получателя</label>
                <input asp-for="RecipientCity" class="form-control" placeholder="Введите город получателя" />
                <span asp-validation-for="RecipientCity" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RecipientAddress" class="form-label fw-bold">Адрес получателя</label>
                <input asp-for="RecipientAddress" class="form-control" placeholder="Введите адрес получателя" />
                <span asp-validation-for="RecipientAddress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Weight" class="form-label fw-bold">Вес груза</label>
                <input asp-for="Weight" class="form-control" placeholder="Введите вес в килограммах" />
                <span asp-validation-for="Weight" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="PickupDate" class="form-label fw-bold">Дата забора груза</label>
                <input asp-for="PickupDate" class="form-control" type="date" />
                <span asp-validation-for="PickupDate" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success">Создать заказ</button>
            <a asp-action="Index" class="btn btn-outline-secondary ms-2">Назад к списку</a>
        </form>
    </div>
</div>
